<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xwl.prisonbreak.mapper.SysUserMapper">

    <!-- 开启二级缓存 -->
    <!-- <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> -->

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.xwl.prisonbreak.model.po.SysUser">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="nickname" property="nickname" />
        <result column="password" property="password" />
        <result column="role_id" property="roleId" />
        <result column="dept_id" property="deptId" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="deleted" property="deleted" />
        <result column="email" property="email" />
        <result column="phone" property="phone" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, username, nickname, password, role_id, dept_id, create_time, update_time, deleted, email, phone
    </sql>

    <!-- 根据id查找 -->
    <select id="findByIdUseXml" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/> FROM sys_user AS t WHERE t.id = #{id}
    </select>

    <select id="findByNameUseXml" resultType="com.xwl.prisonbreak.model.po.SysUser">
        <!-- like方式一：使用CONCA()函数 -->
        <!--select <include refid="Base_Column_List"/> FROM sys_user AS t WHERE t.username LIKE CONCAT("%", #{name}, "%")-->

        <!-- like方式二；使用bind标签 -->
        <bind name="username" value="'%' + name + '%'" />
        SELECT <include refid="Base_Column_List"/> FROM sys_user AS t WHERE t.username LIKE #{username}
    </select>

</mapper>
